    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 56379,
            "host": "127.0.0.1"
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "server",
                "--dev",
                "--address",
                "127.0.0.1:9999",
                "--tls",
                "/tmp/runme/tls",
            ]
        },
        {
            "name": "CLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "ls",
            ]
        }
    ]
}
